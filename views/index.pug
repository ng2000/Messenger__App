				br
				br
				hr
			main.join-main(style='background-color: white; color: black')
				form(action='/chat' method="POST")
					.form-control
						label(for='username') Username
						input#username(type='text' name='username' placeholder='Enter username...' required='')
					if(roomname!=undefined)
						label(for='room') Room Name
							input#username(type='text' name='room' value=roomname placeholder='Enter room name...' required='')
					else
						label(for='room') Room Name
							input#username(type='text' name='room' placeholder='Enter room name...' required='')
